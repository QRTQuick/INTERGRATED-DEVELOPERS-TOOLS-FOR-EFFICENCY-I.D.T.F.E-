<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.idtfe.controllers.AiSettingsController" spacing="8.0" style="-fx-padding:10;">
    <Label text="AI Settings" style="-fx-font-size:16; -fx-font-weight:bold;" />
    <GridPane hgap="8" vgap="8">
        <Label text="GROC API URL:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="grocUrlField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="AI API Key:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="aiKeyField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>
    <HBox spacing="8">
        <Button fx:id="saveBtn" text="Save" />
        <Button fx:id="testBtn" text="Test" />
    </HBox>
    <TextArea fx:id="outputArea" prefRowCount="6" wrapText="true" />
</VBox>
